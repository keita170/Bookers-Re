<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'left', user: @user, book: @book  %>
    </div>
    <div class="col-md-8 offset-1">
      <h2>Users</h2>
      <table class="table table-inverse">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <th>
              <%= attachment_image_tag user, :prfile_image,  format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %>
            </th>
            <th>
              <%= user.name %>
            </th>
            <th>
              <%= link_to "Show", user_path(user) %>
            </th>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>