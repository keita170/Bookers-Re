<div class="container">
  <div class="row">
    <div class="col-3">
      <h2>User info</h2>
      <%= attachment_image_tag @user, :prfile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %><br>
      <table class="table">
        <tr>
          <th>name</th>
          <th><%= @user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= @user.introduction %></th>
        </tr>
      </table>
      <%= link_to edit_user_path(@user), class:"btn btn-outline-secondary btn-block" do %>
      <span class="fas fa-user-cog"></span>
      <% end %>
      <h2>New book</h2>
      <%= form_with model:@book, local:true do |f| %>
      <p>Title</p>
      <%= f.text_field :title %>
      <p>Opinion</p>
      <%= f.text_area :body %>
      <%= f.submit "Create Book", class:"btn btn-success" %>
      <% end %>

    </div>
    <div class="col-8 offset-1">
      <h2>Users</h2>
      <table class="table table-inverse">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <th>
              <%= attachment_image_tag user, :prfile_image,  format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %>
            </th>
            <th>
              <%= user.name %>
            </th>
            <th>
              <%= link_to "Show", user_path(user) %>
            </th>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>