<div class="container">
  <div class="row">
    <div class="col-3">
      <h2>User info</h2>
      <%= attachment_image_tag @user, :prfile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %><br>
      <table class="table">
        <tr>
          <th>name</th>
          <th><%= @user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= @user.introduction %></th>
        </tr>
      </table>
      <%= link_to edit_user_path(@user), class:"btn btn-outline-secondary btn-block" do %>
      <span class="fas fa-user-cog"></span>
      <% end %>
      <h2>New book</h2>
      <%= form_with model:@book, local:true do |f| %>
      <p>Title</p>
      <%= f.text_field :title %>
      <p>Opinion</p>
      <%= f.text_area :body %>
      <%= f.submit "Create Book", class:"btn btn-success" %>
      <% end %>

    </div>
    <div class="col-8 offset-1">
      <h2>Books</h2>
      <table class="table table-inverse">
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
          <%= @books.each do |book| %>
          <tr>
            <th>
              <%= link_to user_path(@user) do %>
              <%= attachment_image_tag @user, :prfile_image, format: 'jpeg', fallback: "no_image.jpeg", size: "40x40" %>
              <% end %>
            </th>
            <th><%= link_to book.title, book_path(book) %></th>
            <th><%= book.body %></th>
          </tr>
          <% end %>
      </table>
    </div>
  </div>
</div>