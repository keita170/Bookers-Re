<div class="container">
  <div class="row">
    <div class="col-md-3">
            <%= render 'left', user: @user, book: @book %>
    </div>
    <div class="col-8 offset-1">
      <h2>Books</h2>
      <table class="table table-inverse">
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
          <% @books.each do |book| %>
          <tr>
            <th>
              <%= link_to user_path(@user) do %>
              <%= attachment_image_tag @user, :prfile_image, format: 'jpeg', fallback: "no_image.jpeg", size: "40x40" %>
              <% end %>
            </th>
            <th><%= link_to book.title, book_path(book) %></th>
            <th><%= book.body %></th>
          </tr>
          <% end %>
      </table>
    </div>
  </div>
</div>