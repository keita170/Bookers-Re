



<div class="container">
  <div id="error_explanation">
  <% if @book.errors.any? %>
  <%= @book.errors.count %>error prohibited this obj from being saved:<br>
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
</div>
  <div class="row">


    <div class="col-3">
            <%= render 'users/left', user: @user, book: @book %>
    </div>
    <div class="col-8 offset-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <th>
              <%= link_to user_path(book.user) do %>
              <%= attachment_image_tag book.user, :prfile_image,  format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %>
              <% end %>
            </th>
            <th>
              <%= link_to book.title, book_path(book) %>
            </th>
            <th>
              <%= book.body %>
            </th>
            <th></th>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>