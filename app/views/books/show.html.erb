<div class="container">
  <div class="row">
    <div class="col-md-3">
            <%= render 'users/left', user: @user, book: @book %>
    </div>
    <div class="col-md-8 offset-1">
      <h2>Book detail</h2>
      <table class="table">
          <tr>
            <th>
              <%= link_to user_path(@booki.user) do %>
              <%= attachment_image_tag @booki.user, :prfile_image, format: 'jpeg', fallback: "no_image.jpeg", size: "40x40" %><br>
              <%= link_to @user.name, user_path(@booki.user) %>
              <% end %>
            </th>
            <th><%= link_to @booki.title, book_path(@booki) %></th>
            <th><%= @booki.body %></th>
            <% if @booki.user == current_user %>
            <th><%= link_to "Edit", edit_book_path(@booki), class:"btn btn-sm btn-success" %></th>
            <th><%= link_to "Destroy", destroy_book_path(@booki), method: :delete, "data-confirm" => "本当に削除しますか？" , class:"btn btn-sm btn-danger" %></th>
            <% end %>
          </tr>
      </table>
    </div>
  </div>
</div>